---
import Thumbnail from "@/assets/images/thumbnail.jpg";
// ResourceLayout with Tailwind CSS
interface Props {
  title: string;
  thumbnail: string;
  slug: string;
  description: string;
}

const { title, thumbnail, slug, description } = Astro.props;
---

<main class="w-full max-w-[60rem] mx-auto px-4 md:px-12 lg:px-24 py-8">
    <div class="md:mb-[5.5rem] mb-[2rem] overflow-hidden rounded-3xl min-w-full relative sm:h-[25.44rem] h-[14rem]">
        <img
          src={Thumbnail.src}
          alt={`thumbnail-${slug}`}
          class=" w-full object-cover"
        />
         <img
          src={thumbnail}
          alt={`thumbnail-${slug}`}
          class="sm:h-[10rem] h-[5rem] w-auto absolute md:bottom-10 bottom-10 left-8 object-contain"
        />
      </div>
    <header class="space-y-8 mb-8">
      <h1 class="md:text-4xl text-xl font-semibold text-gray-900 mb-4 text-center">
        {title}
      </h1>
      <p class="text-grey-200 font-light leading-7 text-base text-justify">{description}</p>
    </header>
    <article
     class="markdown-content"
    >
        <slot />
    </article>
</main>

