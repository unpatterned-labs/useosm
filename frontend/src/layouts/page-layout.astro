---
import "@/styles/global.css";
import AnnouncementBanner from "@/components/shared/astro-components/announcement-banner.astro";
import NavBar from "@/components/header";
import Footer from "@/components/footer/footer.astro";
export interface Props {
  title?: string;
  description?: string;
  favicon?: string;
  lang?: string;
}

const {
  title = "UseOSM",
  description = "Showcase the use of OpenStreetMap Data",
  lang = "en",
} = Astro.props;

const ogImageUrl = new URL(
  "/images/og-image.png",
  Astro.site || Astro.url,
).toString();
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    {description && <meta name="description" content={description} />}
    <title>UseOSM - {title}</title>

    <!-- Core SEO Meta Tags -->
    {description && <meta name="description" content={description} />}
    <meta
      name="keywords"
      content="UseOSM, OpenStreetMap, mapping, geospatial, open source maps, OSM, Editors, Contributors, OSM community"
    />
    <meta name="author" content="Unpatterned" />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={`UseOSM - ${title}`} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="UseOSM" />

    <!-- Twitter Card -->
    <!-- <meta name="twitter:card" content="summary_large_image" /> -->
    <meta name="twitter:url" content={ogImageUrl} />
    <meta name="twitter:title" content={`UseOSM - ${title}`} />
    {description && <meta name="twitter:description" content={description} />}
    <!-- <meta name="twitter:image" content="/twitter-image.jpg" /> -->

    <!-- Canonical URL -->
    <link rel="canonical" href={ogImageUrl} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&display=swap"
      rel="stylesheet"
    />

    <!-- Additional Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#ffffff" />

    <!-- Preload Critical Resources -->
    <link
      rel="preload"
      href="/fonts/your-font.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- DNS Prefetch for External Domains -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com" />
    <link rel="dns-prefetch" href="//www.google-analytics.com" />
  </head>
  <body>
    <!-- Wrapper for slide-in animation -->
    <main class="slide-in-container">
      <AnnouncementBanner />
      <NavBar client:load />
      <slot />
      <Footer />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Geist", sans-serif;
    overflow-x: hidden; /* Prevent horizontal scroll during animations */
  }
</style>
