---
import cn from "@/utils/cn";
export interface Props {
  src: string;
  alt?: string;
  figure?: boolean;
  className: string;
}

const { src, alt = "Image", figure = false, className = "" } = Astro.props;
---

<div class="my-8 max-w-full justify-center space-y-4">
  <img
    src={src}
    alt={alt}
    class={cn("max-h-auto max-w-full rounded-lg shadow-md", className)}
  />
  {
    figure && (
      <figcaption class="mt-2 text-center text-sm text-gray-500">
        {alt}
      </figcaption>
    )
  }
</div>
